@model Movie
@{
    ViewData["Title"] = "AddWithBinding";
}

@if (ViewData["Message"] == null)
{
    <h1>Add Movie</h1>

    <div class="form-group">
        <form method="post">
            <label asp-for="Title"></label>
            <input asp-for="Title" class="form-control" />
            <span asp-validation-for="Title"></span>
            <br />

            <label asp-for="ReleaseYear"></label>
            <input asp-for="ReleaseYear" class="form-control" />
            <span asp-validation-for="ReleaseYear"></span>
            <br />

            <label asp-for="Genre"></label>
            <input asp-for="Genre" class="form-control" />
            <span asp-validation-for="Genre"></span>
            <br />

            <label asp-for="Rating"></label>
            <input asp-for="Rating" class="form-control" />
            <span asp-validation-for="Rating"></span>
            <br />

            <label asp-for="Length"></label>
            <input asp-for="Length" class="form-control" />
            <span asp-validation-for="Length"></span>
            <br />

            <input class="btn-outline-primary" type="submit" value="Add Movie" />

        </form>
    </div>
}
else
{


    <div class="alert alert-success">
        <h2>@ViewData["Message"]</h2>
    </div>
    
    @section Scripts
    {
        <partial name="_ValidationScriptsPartial" />
    }
}